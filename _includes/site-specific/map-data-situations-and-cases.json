{% assign preliminary_examinations_color = 'green' %}{% assign trials_color = 'black' %}
"areas": [{% for post in site.data.situations-and-cases %}{% if post.ISO_code %}{"id":"{{ post.ISO_code }}"{% if post.Status == 'Preliminary Examinations' %},"color":"{{ preliminary_examinations_color }}"{% elsif post.Status == 'Trial(s)' %},"color":"{{ trials_color }}"{% else %},"color":"#FFF"{% endif %},"description":"{% if post.Phase %}<p><strong>Phase:</strong> {{ post.Phase | strip_newlines }}</p><p>{% endif %}","label": "{{ post.Country }}"}{% unless forloop.last %},{% endunless %}{% endif %}{% endfor %}]